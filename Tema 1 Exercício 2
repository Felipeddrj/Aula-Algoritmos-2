algoritmo "Soma de 3 Números Reais"
var
   numero, soma: real
   i: inteiro
   resultadoSoma: real

funcao calcularSomaNumeros(): real
inicio
   soma <- 0

   para i de 1 ate 3 faca
      escreval("Digite o ", i, "º número real: ")
      leia(numero)
      soma <- soma + numero
   fimpara

   retorne soma
fimfuncao

inicio
   resultadoSoma <- calcularSomaNumeros()
   escreva("A soma dos 3 números é: ", resultadoSoma)
fimalgoritmo
