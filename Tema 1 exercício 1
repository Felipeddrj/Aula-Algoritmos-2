Algoritmo "Tema 1 Exercícios"

Var
numero, maior, menor, contador: inteiro


  procedimento maiorMenor()
  inicio
  maior <- 0
  contador <- 1
  menor <- 999999
  enquanto (contador <= 5) faca
  escreval("Digite o ", contador, " número: ")
  leia(numero)
  contador <- contador + 1
  se (numero > maior) entao
  maior <- numero
  fimse
  se (numero < menor) entao
  menor <- numero
  fimse
  fimenquanto
  escreval("O maior número é: ", maior,"!")
  escreval("O menor número é: ", menor,"!")
  fimprocedimento
Inicio
  maiorMenor()
Fimalgoritmo
